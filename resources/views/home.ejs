<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2 px-9">
            <h5 class="text-lg"><em>Always on time with</em><bold class="text-3xl md:text-6xl">PizzaGhar</bold></h5>
            <h1 class="text-3xl md:text-6xl font-bold">Pizza! Pizza!</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img class="inline-block px-4 py-2" src="/img/hero-pizza1.jpg">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8 px-4">All Pizzas</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 gap-y-16">

        <% pizzas.forEach(function(pizza) { %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg px-4"><%= pizza.name %></h2>
                    <span class="size px-4 py-1 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">Rs.<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
       <% })%>
    </div>
</section>